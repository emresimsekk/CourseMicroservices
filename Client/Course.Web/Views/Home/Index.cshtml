@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}
@model List<CourseViewModel>

<h2>Kurslar</h2>
<hr />

    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            count++;
            if (count == 1 || (count % 3 == 1))
            {
                @Html.Raw("<div class='card-deck mb-2'>")
            }
                <div class="card">
                    <img class="card-img-top"  height="220" src="@item.StockPictureUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <div class="badge bg-primary">Kategori: @item.Category.Name</div>
                        <p class="card-text">@item.ShortDescription</p>
                        <h4 class="text-primary">@item.Price TL</h4>

                        <div><a class="btn btn-success" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">Detay</a></div>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Last updated @item.Minute</small>
                    </div>
                </div>

            if (count % 3 == 0)
            {
                @Html.Raw("</div>")
            }

        }

    }
